{
    "name": "lilclimate/ddd-php",
    "description": "A library for Domain-Driven Design (DDD) in PHP",
    "type": "library",
    "require": {
      "php": "^7.4 || ^8.0",
      "ramsey/uuid": "^4.2"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "scripts": {
      "test": "phpunit"
    },
    "require-dev": {
      "phpunit/phpunit": "^11.2"
    }
  }
  